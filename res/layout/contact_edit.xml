<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/contact_edit_hint_name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editContactPhoneNbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/contact_edit_hint_phone" />
    <Button
        android:id="@+id/btnConfirmContactEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_edit_confirm" />

</LinearLayout>